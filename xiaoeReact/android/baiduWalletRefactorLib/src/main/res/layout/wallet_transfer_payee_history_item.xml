<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/bd_wallet_transfer_payee_history_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bd_wallet_transfer_item_height"
        android:background="@drawable/wallet_base_history_item_selector"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >
        
        <TextView
            android:id="@+id/bd_wallet_payee_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:textSize="14.0dp"
            android:textColor="@color/bd_wallet_text_gray2"
            android:layout_alignParentRight="true"
            />
        
       <LinearLayout 
           android:id="@+id/bd_wallet_payee_account_layout"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:gravity="center_vertical"
           android:layout_toLeftOf="@id/bd_wallet_payee_name"
           android:orientation="vertical"
           >  
	        <TextView
	            android:id="@+id/bd_wallet_payee_account_type"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/bd_wallet_text_gray2"
	            android:textSize="12.0dp" />
	        
	         <TextView
		        android:id="@+id/bd_wallet_payee_account"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/bd_wallet_text_gray2"
		        android:textSize="12.0dp" />
        </LinearLayout>
        
    </RelativeLayout>

</LinearLayout>